source 'https://rubygems.org'

# browser interaction
gem 'selenium-webdriver'

# utilities
gem 'rake'
gem 'i18n', '~> 0.7.0'
gem 'activesupport'
gem 'actionview'
gem 'curb'
gem 'nokogiri'
gem 'multi_json'
gem 'faker'
gem 'sanitize'

# localhost stuff
gem 'logging'
gem 'launchy'
gem 'highline'

# language
gem 'punkt-segmenter', git: 'https://github.com/parhamr/punkt-segmenter.git'

# testing
group :test, :development do
  gem 'pry' # when debugging
  gem 'factory_girl'
  gem 'guard'
  gem 'guard-rspec'
  gem 'rspec-its' # adds support for "its" method in RSpec 3
  gem 'listen'
  gem 'guard-rubocop'
  gem 'simplecov', require: false
end
